  sIFR.replaceElement("#sIFR", named({sFlashSrc: "./ChunkFive/sifr.swf", sColor: "#000"}));
  
  $(window).load(function(){
    var dds = document.getElementsByTagName("dd");
    for (n in dds) {
      console.log(window.getComputedStyle(dds[n], "").getPropertyValue("font-family"));
    }
  })
